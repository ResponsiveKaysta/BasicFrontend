@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

@using System.Web.Mvc;

@{
    Layout = null;

    var homePage = Model.Content.AncestorOrSelf(1);
    var configPage = homePage.Descendant<SiteGlobal>();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="page-topic" content="News">
    <meta name="robots" content="index,follow">
    <meta name="revisit-after" content="3 days">
    <meta name="audience" content="Informatiker">

    <meta http-equiv="cache-control" content="no-cache">
    <meta http-equiv="pragma" content="no-cache">

    <meta name="description" content="@Umbraco.Field("introduction")">
    <meta name="keywords" content="@configPage.MetaKeywords">
    <meta name="author" content="@configPage.SiteAuthor">

    <link rel="icon" href="">

    <title>@Umbraco.Field("title") | @configPage.SiteAuthor | @configPage.SiteTitle</title>


    <!--[if lte IE 8]><script src="@Url.Content("~/Frontend/Css/Ie/html5shiv.js")"></script><![endif]-->
    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bundle.min.css")">

    <!--[if lte IE 9]><link rel="stylesheet" href="@Url.Content("~/Frontend/Css/Ie/v9.css")" /><![endif]-->
    <!--[if lte IE 8]><link rel="stylesheet" href="@Url.Content("~/Frontend/Css/Ie/v8.css")" /><![endif]-->


</head>
<body class="@Umbraco.Field("pageType")">

    <div id="page-wrapper">

        <header id="header" class="@Umbraco.Field("headerType")">
            @Html.Partial("Header")
        </header>

        @RenderBody()

        <footer id="footer">
            @Html.Partial("Footer")
        </footer>

    </div>

    <script type="text/javascript" src="@Url.Content("~/Scripts/app.min.js")"></script>

</body>
</html>